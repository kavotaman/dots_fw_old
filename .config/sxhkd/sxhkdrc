  /home/omk/Scripts/volume_up

# Still mu√∏ltimedia
XF86AudioLowerVolume
#   amixer -q set Master 3%- unmute
  /home/omk/Scripts/volume_down

# still
XF86AudioMute
  pactl set-sink-mute "@DEFAULT_SINK@" toggle

# Brightness up
XF86MonBrightnessUp
  xbacklight -inc 10

# And brightness down
XF86MonBrightnessDown
  xbacklight -dec 10

# Brightness up
alt + ctrl + equal
  xbacklight -inc 10

# And brightness down
alt + ctrl + minus
  xbacklight -dec 10

# Brightness up
super + equal
  xbacklight -inc 100

# And brightness down
super + minus
  xbacklight -dec 100

# lock
super + shift + i
  i3lock -i Atibaia_lock.png

# Screenshot
super + p
  sleep 1 && scrot -s /home/omk/Pictures/Screenshots/screenshot-$(date +%F_%T).png

